{
  "name": "allure-hermione",
  "version": "2.5.0",
  "packageManager": "yarn@3.4.1",
  "license": "Apache-2.0",
  "author": {
    "name": "Qameta Software",
    "email": "allure@qameta.io",
    "url": "https://qameta.io/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allure-framework/allure-js.git",
    "directory": "packages/allure-hermione"
  },
  "keywords": [
    "hermione",
    "typescript",
    "allure"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist ./out",
    "compile": "tsc",
    "test": "nyc tsx --tsconfig ./tsconfig.json ./test/runner.ts",
    "coverage": "codecov",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.7.8",
    "@types/selenium-standalone": "^7.0.1",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "fs-jetpack": "^4.1.0",
    "glob": "^7.1.7",
    "hermione": "^6.1.3",
    "mocha": "^9.1.3",
    "mocha-multi-reporters": "^1.5.1",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "selenium-standalone": "^8.3.0",
    "source-map-support": "^0.5.19",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "allure-js-commons": "workspace:*"
  },
  "nyc": {
    "check-coverage": false,
    "lines": 80,
    "statements": 80,
    "functions": 75,
    "branches": 70,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "test/**/*.*",
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "report-dir": "./out/coverage",
    "temp-dir": "./out/.nyc"
  },
  "files": [
    "dist"
  ]
}
