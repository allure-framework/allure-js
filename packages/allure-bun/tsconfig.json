{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["bun-types", "node"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./test"
  ]
}