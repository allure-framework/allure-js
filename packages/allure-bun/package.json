{
  "name": "allure-bun",
  "version": "3.4.5",
  "description": "Allure Bun Test Runner integration",
  "keywords": [
    "allure",
    "bun",
    "test",
    "report",
    "reporter",
    "testing",
    "testops"
  ],
  "homepage": "https://allurereport.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/allure-framework/allure-js.git",
    "directory": "packages/allure-bun"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Qameta Software",
    "email": "allure@qameta.io",
    "url": "https://qameta.io/"
  },
  "type": "module",
  "exports": {
    "./reporter": {
      "types": "./dist/reporter.d.ts",
      "import": "./dist/reporter.js",
      "default": "./dist/reporter.js"
    },
    "./setup": {
      "types": "./dist/setup.d.ts",
      "import": "./dist/setup.js",
      "default": "./dist/setup.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "allure-report": "allure serve ./out/allure-results",
    "clean": "rimraf ./dist ./out",
    "compile": "run-s 'compile:*'",
    "compile:tsc": "tsc --project ./tsconfig.json",
    "compile:fixup": "node ./scripts/fixup.mjs",
    "generate-report": "allure generate ./out/allure-results -o ./out/allure-report --clean",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test": "bun test"
  },
  "dependencies": {
    "allure-js-commons": "workspace:*"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.6.1",
    "@types/bun": "latest",
    "@types/eslint": "^8.56.11",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "allure-commandline": "^2.29.0",
    "bun-types": "latest",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^54.0.0",
    "eslint-plugin-n": "^17.10.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "npm-run-all2": "^8.0.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  }
}
