  "author": {
    "name": "Microsoft Corporation"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allure-framework/allure-js.git",
    "directory": "packages/allure-playwright"
  },
  "keywords": [
    "playwright",
    "allure"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist ./out",
    "compile": "tsc",
