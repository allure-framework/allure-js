{
  "name": "allure-playwright",
  "version": "2.15.0",
  "description": "Allure Playwright integration",
  "keywords": [
    "playwright",
    "allure"
  ],
  "homepage": "https://allurereport.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/allure-framework/allure-js.git",
    "directory": "packages/allure-playwright"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Qameta Software",
    "email": "allure@qameta.io",
    "url": "https://qameta.io/"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./testplan": {
      "require": "./dist/testplan.js",
      "types": "./dist/testplan.d.ts",
      "default": "./dist/testplan.js"
    },
    "./autoconfig": {
      "require": "./dist/autoconfig.js",
      "types": "./dist/autoconfig.d.ts",
      "default": "./dist/autoconfig.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "allure-report": "allure serve ./out/allure-results",
    "clean": "rimraf ./dist ./out",
    "compile": "run-s compile:esm compile:cjs compile:cleanup",
    "compile:esm": "tsc --project ./tsconfig.json",
    "compile:cjs": "babel ./dist/esm --out-dir ./dist --extensions '.js' --source-maps",
    "compile:cleanup": "rimraf ./dist/esm",
    "generate-report": "allure generate ./out/allure-results -o ./out/allure-report --clean",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "pretest": "run compile",
    "test": "vitest run test/spec"
  },
  "dependencies": {
    "allure-js-commons": "workspace:*",
    "strip-ansi": "^5.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.6",
    "@babel/core": "^7.24.6",
    "@babel/plugin-transform-modules-commonjs": "^7.24.6",
    "@playwright/test": "^1.34.1",
    "@types/babel__core": "^7",
    "@types/eslint": "^8",
    "@types/md5": "^2",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^48.0.0",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "glob": "^10.3.12",
    "md5": "^2.3.0",
    "npm-run-all2": "^6.1.2",
    "properties": "^1.2.1",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2",
    "vitest": "^1.5.0"
  }
}
