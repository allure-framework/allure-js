{
  "extends": "../../tsconfig.json",
  "include": [
    "./src/**/*",
    "index.ts",
    "internal.ts",
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["dom", "esnext"],
    "types": [
      "node"
    ],
    "outDir": "./dist"
  }
}
