{
  "private": true,
  "name": "allure-jest",
  "version": "2.0.0-beta.22",
  "description": "Allure Jest integration",
  "license": "Apache-2.0",
  "author": "Stanislav Seliverstov <s.seliverstov@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/allure-framework/allure-js.git",
    "directory": "packages/allure-jest"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist ./out",
    "lint": "eslint ./test --ext .ts",
    "lint:fix": "eslint ./test --ext .ts --fix",
    "compile": "tsc",
    "generate-report": "allure generate ./out/allure-results -o ./out/allure-report --clean",
    "jasmineTest": "jest --config ./test/default-runner/jest.config.js",
    "test": "rimraf ./out; npm run jasmineTest"
  },
  "devDependencies": {
    "@types/jasmine": "^3.3.12",
    "@types/jest": "^26.0.10",
    "allure-jasmine": "2.0.0-beta.22",
    "jest": "^26.4.2"
  },
  "dependencies": {
    "allure-js-commons": "2.0.0-beta.22"
  }
}
