{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/types",
    "rootDir": "src",
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "types": [
      "node",
      "@wdio/types",
      "@wdio/reporter"
    ],
    "module": "node16",
    "moduleResolution": "node16",
    "target": "es2020",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"],
  "references": [
    { "path": "../allure-js-commons" }
  ]
}