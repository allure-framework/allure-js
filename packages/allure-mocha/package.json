{
  "name": "allure-mocha",
  "version": "2.8.1",
  "description": "Allure Mocha integration",
  "license": "Apache-2.0",
  "author": {
    "name": "Qameta Software",
    "email": "allure@qameta.io",
    "url": "https://qameta.io/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allure-framework/allure-js.git",
    "directory": "packages/allure-mocha"
  },
  "keywords": [
    "mocha",
    "typescript",
    "allure"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist ./out",
    "compile": "tsc",
    "generate-report": "allure generate ./out/allure-results -o ./out/allure-report --clean",
    "allure-report": "allure serve ./out/allure-results",
    "test:compile": "nyc tsx --tsconfig test/tsconfig.json",
    "test": "nyc tsx --tsconfig test/tsconfig.json test/runner.ts",
    "coverage": "codecov",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix"
  },
  "devDependencies": {
    "@testdeck/mocha": "0.1.2",
    "@types/chai": "^4.2.11",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.8",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "fs-jetpack": "^4.1.0",
    "glob": "^8.0.0",
    "mocha": "^9.1.3",
    "mocha-multi-reporters": "^1.5.1",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "tsx": "^3.12.7",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "allure-js-commons": "workspace:*"
  },
  "peerDependencies": {
    "mocha": ">=6.2.x"
  },
  "nyc": {
    "check-coverage": false,
    "lines": 80,
    "statements": 80,
    "functions": 75,
    "branches": 70,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "test/**/*.*",
      "**/*.d.ts",
      "runtime.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "report-dir": "./out/coverage",
    "temp-dir": "./out/.nyc"
  },
  "files": [
    "dist",
    "runtime.js",
    "runtime.d.ts"
  ]
}
