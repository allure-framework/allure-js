{
  "name": "allure-codeceptjs",
  "version": "2.15.0",
  "description": "Allure codeceptjs integration",
  "keywords": [
    "codeceptjs",
    "allure"
  ],
  "homepage": "https://allurereport.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/allure-framework/allure-js.git",
    "directory": "packages/allure-codeceptjs"
  },
  "license": "Apache-2.0",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "clean": "rimraf ./dist ./out ./test-results",
    "compile": "run-p 'compile:*'",
    "compile:lib": "rollup -c",
    "compile:types": "tsc --project ./tsconfig.json",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "test": "vitest run"
  },
  "dependencies": {
    "allure-js-commons": "workspace:*"
  },
  "devDependencies": {
    "@codeceptjs/configure": "^0.10.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/eslint": "^8",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "allure-mocha": "workspace:*",
    "codeceptjs": "^3.5.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^48.0.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "expect": "^29.7.0",
    "glob": "^10.3.12",
    "mocha": "^10.4.0",
    "mocha-multi-reporters": "^1.5.1",
    "npm-run-all2": "^6.1.2",
    "rimraf": "^5.0.1",
    "rollup": "^4.16.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vitest": "^1.5.0"
  }
}
