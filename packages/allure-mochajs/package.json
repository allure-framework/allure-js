{
  "name": "allure-mochajs",
  "version": "2.0.0-beta.1",
  "description": "Allure Mocha integration",
  "license": "Apache-2.0",
  "author": "Sergey Korol <serhii.s.korol@gmail.com>",
  "repository": "https://github.com/allure-framework/allure-js",
  "keywords": [
    "mocha",
    "typescript",
    "allure"
  ],
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./allure-results ./coverage ./.nyc_output",
    "compile": "tsc",
    "prepublishOnly": "npm run clean && npm run build",
    "build": "npm run compile",
    "generate-report": "allure generate ./allure-results -o ./.allure-report --clean",
    "allure-report": "allure serve ./allure-results",
    "test": "nyc mocha",
    "coverage": "codecov",
    "lint-fix": "tslint --fix --project .",
    "lint": "tslint --project .",
    "precommit": "lint-staged",
    "postcommit": "git update-index -g"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "dotenv": "^6.1.0",
    "fs-jetpack": "^2.2.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nyc": "^13.1.0",
    "prettier": "^1.14.3",
    "properties-reader": "^0.0.16",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.0"
  },
  "dependencies": {
    "allure-js-commons": "2.0.0-beta.1"
  },
  "peerDependencies": {
    "mocha": "^5.2.0"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 85,
    "statements": 85,
    "functions": 85,
    "branches": 75,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.*",
      "index.*",
      "package/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "git add"
    ]
  }
}
