{
  "name": "allure-vitest",
  "version": "2.15.0",
  "type": "module",
  "description": "Allure Vitest integration",
  "keywords": [
    "vitest",
    "typescript",
    "allure"
  ],
  "homepage": "https://allurereport.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/allure-framework/allure-js.git",
    "directory": "packages/allure-vitest"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Qameta Software",
    "email": "allure@qameta.io",
    "url": "https://qameta.io/"
  },
  "exports": {
    "./reporter": {
      "import": "./dist/esm/reporter.js",
      "require": "./dist/cjs/reporter.js",
      "types": "./dist/esm/reporter.d.ts",
      "default": "./dist/cjs/reporter.js"
    },
    "./setup": {
      "import": "./dist/esm/setup.js",
      "require": "./dist/cjs/setup.js",
      "types": "./dist/esm/setup.d.ts",
      "default": "./dist/cjs/setup.js"
    },
    "./autoconfig": {
      "import": "./dist/esm/autoconfig.js",
      "require": "./dist/cjs/autoconfig.js",
      "types": "./dist/esm/autoconfig.d.ts",
      "default": "./dist/cjs/autoconfig.js"
    }
  },
  "files": [
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "compile": "run-s compile:esm compile:cjs compile:fixup",
    "compile:esm": "tsc --project ./tsconfig.json",
    "compile:cjs": "babel ./dist/esm --out-dir ./dist/cjs --extensions '.js' --source-maps",
    "compile:fixup": "node ./scripts/fixup.js",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test": "vitest run --dir ./test/spec --config ./vitest.config.ts"
  },
  "dependencies": {
    "allure-js-commons": "workspace:*"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.6",
    "@babel/core": "^7.24.6",
    "@babel/plugin-transform-modules-commonjs": "^7.24.6",
    "@types/babel__core": "^7",
    "@types/eslint": "^8",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^48.0.0",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "glob": "^10.3.15",
    "npm-run-all2": "^6.1.2",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.11",
    "vitest": "^1.1.3"
  }
}
