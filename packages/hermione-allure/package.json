{
  "name": "hermione-allure",
  "version": "2.0.0-beta.21",
  "packageManager": "yarn@3.2.1",
  "license": "Apache-2.0",
  "author": "qameta software",
  "repository": {
    "type": "git",
    "url": "https://github.com/allure-framework/allure-js.git",
    "directory": "packages/hermione-allure"
  },
  "keywords": [
    "hermione",
    "typescript",
    "allure"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist ./out",
    "compile": "tsc",
    "generate-report": "allure generate ./out/allure-results -o ./out/allure-report --clean",
    "allure-report": "allure serve ./out/allure-results",
    "test:compile": "nyc ts-node --project test/tsconfig.json",
    "test": "nyc ts-node --project test/tsconfig.json test/runner.ts",
    "coverage": "codecov",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.7.8",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "dotenv": "^10.0.0",
    "fs-jetpack": "^4.1.0",
    "glob": "^7.1.7",
    "hermione": "^6.0.0",
    "mocha": "^9.1.3",
    "mocha-multi-reporters": "^1.5.1",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "allure-js-commons": "workspace:*",
    "hermione-allure": "workspace:*"
  },
  "nyc": {
    "check-coverage": false,
    "lines": 80,
    "statements": 80,
    "functions": 75,
    "branches": 70,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "test/**/*.*",
      "**/*.d.ts",
      "runtime.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "report-dir": "./out/coverage",
    "temp-dir": "./out/.nyc"
  },
  "files": [
    "dist"
  ]
}
