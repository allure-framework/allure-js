{
  "name": "allure-js",
  "version": "2.10.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "yarn workspaces foreach -Avpt run clean",
    "compile": "yarn workspaces foreach -vApt run compile",
    "lint": "yarn workspaces foreach -Avpt run lint",
    "lint:fix": "yarn workspaces foreach -Avpt run lint:fix",
    "prepare": "husky install",
    "prettier:check": "prettier --check './packages/*/{src,test,features}/**/*.{js,ts}' '**/package.json' .prettierrc.js plugin-ci-version.js",
    "prettier:format": "prettier --write './packages/*/{src,test,features}/**/*.{js,ts}' '**/package.json' .prettierrc.js plugin-ci-version.js",
    "test": "yarn workspaces foreach -Avpt run test"
  },
  "lint-staged": {
    "packages/*/{src,test,features}/**/*.{js,ts,tsx}": [
      "prettier --write"
    ],
    "**/package.json": [
      "prettier --write"
    ],
    ".prettierrc.js": [
      "prettier --write"
    ],
    "plugin-ci-version.js": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint": "^8.56.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^46.10.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^3.2.4",
    "prettier-plugin-packagejson": "^2.4.9",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.0.2"
}
