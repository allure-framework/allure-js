{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "npm run clean && npm run link && lerna run build --stream",
    "clean": "lerna run clean",
    "link": "lerna link --force-local",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "pack": "lerna exec -- npm pack",
    "prepare": "husky install && npm run bootstrap",
    "prettier:format": "prettier --write './packages/*/{src,test}/**/*.{js,ts}'",
    "release": "lerna publish from-package --no-git-reset --yes",
    "run-test": "lerna run test",
    "test": "npm run build && npm run run-test",
    "version": "lerna version --no-changelog --yes"
  },
  "devDependencies": {
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "allure-commandline": "^2.13.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^36.0.6",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.0.2"
  }
}
