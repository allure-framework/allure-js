{
  "name": "allure-js",
  "private": true,
  "version": "2.10.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "prettier:format": "prettier --write './packages/*/{src,test,features}/**/*.{js,ts}'",
    "prettier:check": "prettier --check './packages/*/{src,test,features}/**/*.{js,ts}'",
    "clean": "yarn workspaces foreach -Avpt run clean",
    "compile": "yarn workspaces foreach -vApt run compile",
    "lint": "yarn workspaces foreach -Avpt run lint",
    "lint:fix": "yarn workspaces foreach -Avpt run lint:fix",
    "test": "yarn workspaces foreach -Avpt run test",
    "build": "yarn run clean && yarn run compile"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/eslint": "^8.56.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^46.10.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.0.2"
}
